generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Blog {
  id String @id @default(uuid())

  coverImageUrl String
  title         String
  semanticHtml  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  User      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  id String @id @default(uuid())

  email    String
  password String
  blogs    Blog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AuthToken {
  id String @id @default(uuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
